    <script>
        function openNav() {
            document.getElementById('mySidenav').style.width = '60%';
        }
        function closeNav() {
            document.getElementById('mySidenav').style.width = '0';
        }

        // Validating the time
        function validateTime(){
            const inputDate = new Date(document.getElementById('bookingDate').value);
            const hours = inputDate.getHours();

            const minHour = 9;
            const maxHour = 20;

            if(hours < minHour || hours > max - 1){
                document.getElementById('bookingDate').value = "";
                alert('Please select a time between 9am to 8pm.')
            }
        }
        document.getElementById('bookingDate').addEventListener('change', validateTime);

        // Tabbed Menu
        function opneMenu(evt, menuName){
            let i, x, tablinks;
            x = document.getElementsByClassName('menu');
            for( i = 0; i < x.length; i++){
                x[i].style.display = 'none';
            }
            tablinks = document.getElementsByClassName('tablink');
            for( i = 0; i < x.length; i++){
                tablinks[i].className = tablinks[i].className.replace(' w3-dark-gray', '');
            }
            document.getElementById(menuName).style.display = 'block';
            evt.currentTarget.firstElementChild.className += " w3-dark-gray";
        }
        document.getElementById('myLink').click();
    </script>
